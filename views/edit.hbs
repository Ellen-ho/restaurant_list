<div class="container mt-5">
  <div class="row">
    <h2>修改餐廳詳情</h2>
  </div>
</div>
<div class="container mt-5">
  <div class="row">
    <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">餐廳中文名</label>
        <input
          type="text"
          class="form-control"
          name="name"
          value="{{restaurant.name}}"
          required
        />
      </div>
      <div class="form-group">
        <label for="name_en">餐廳英文名</label>
        <input
          type="text"
          class="form-control"
          name="name_en"
          value="{{restaurant.name_en}}"
          required
        />
      </div>
      <div class="form-group">
        <label for="category">分類</label>
        <input
          type="text"
          class="form-control"
          name="category"
          value="{{restaurant.category}}"
          required
        />
      </div>
      <div class="form-group">
        <label for="image">照片網址</label>
        <input
          type="url"
          class="form-control"
          name="image"
          value="{{restaurant.image}}"
          required
        />
      </div>
      <div class="form-group">
        <label for="location">地址</label>
        <input
          type="text"
          class="form-control"
          name="location"
          value="{{restaurant.location}}"
          required
        />
      </div>
      <div class="form-group">
        <label for="phone">電話</label>
        <input
          type="tel"
          class="form-control"
          name="phone"
          value="{{restaurant.phone}}"
        />
      </div>
      <div class="form-group">
        <label for="google_map">Google 地圖</label>
        <input
          type="url"
          class="form-control"
          name="google_map"
          value="{{restaurant.google_map}}"
          required
        />
      </div>
      <div class="form-group">
        <label for="rating">評分</label>
        <input
          type="text"
          min="1"
          max="5"
          step="0.1"
          class="form-control"
          name="rating"
          value="{{restaurant.rating}}"
          required
        />
      </div>
      <div class="form-group">
        <label for="description">描述</label>
        <input
          type="text"
          class="form-control"
          name="description"
          value="{{restaurant.description}}"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary">更新</button>
    </form>
  </div>
</div>