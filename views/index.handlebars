<div class="container mt-5">
  <div class="row">
    {{!-- search bar --}}
    <form class="col-md-4"
          action="/restaurants/search"
          method="GET">
      <div class="input-group">
        <input type="text"
               name="keyword"
               class="form-control"
               placeholder="輸入餐廳名稱"
               aria-label="Restaurant Name..."
               value="{{keyword}}"
               aria-describedby="search-button">
        <div class="input-group-append">
          <button class="btn btn-major"
                  type="submit"
                  id="search-button"><i class="fas fa-search"></i></button>
        </div>
      </div>
    </form>
    <div class="col-md-4"></div>
    {{!-- sort select --}}
    <form class="col-md-4"
          action="/restaurants/sort"
          method="GET">
      <div class="form-group">
        <select class="form-control"
                id="exampleSelect"
                name="sortCondition"
                onchange="this.form.submit()">
          <option value="name_asc"
                  {{#if (ifEquals sortCondition "name_asc")}}
                  selected
                  {{/if}}>店名:正序</option>
          <option value="name_desc"
                  {{#if (ifEquals sortCondition "name_desc")}}
                  selected
                  {{/if}}>店名:反序</option>
          <option value="category_asc"
                  {{#if (ifEquals sortCondition "category_asc")}}
                  selected
                  {{/if}}>類別:正序</option>
          <option value="category_desc"
                  {{#if (ifEquals sortCondition "category_desc")}}
                  selected
                  {{/if}}>類別:反序</option>
          <option value="rating_asc"
                  {{#if (ifEquals sortCondition "rating_asc")}}
                  selected
                  {{/if}}>評比:正序</option>
          <option value="rating_desc"
                  {{#if (ifEquals sortCondition "rating_desc")}}
                  selected
                  {{/if}}>評比:反序</option>
        </select>
      </div>
    </form>
  </div>
</div>
{{!-- restaurant list --}}
<div class="container mt-5">
  <div class="row">
    {{#if restaurants}}
    <div class="col-md-12 col-12">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}"
           class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top"
                 src="{{this.image}}"
                 alt="Card image cap">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
              <div class="button-area">
                <a href="/restaurants/{{ this._id }}/edit"
                   class="b-btn edit btn">Edit</a>
                <a href="/restaurants/{{this._id}}"
                   class="b-btn detail btn">Detail</a>
                <form action="/restaurants/{{ this._id }}?_method=DELETE"
                      method="POST"
                      style="display: inline;">
                  <button type="submit"
                          class="btn btn-light">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
    {{else}}
    <div class="mx-auto">
      {{#if keyword}}
      <div class="alert alert-warning"
           role="alert">沒有符合 "{{keyword}}" 的資料喔!</div>
      {{else}}
      <div class="alert alert-warning"
           role="alert">您輸入的是空格，請重新輸入!</div>
      {{/if}}
    </div>
    {{/if}}
  </div>
</div>