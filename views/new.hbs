<div class="container mt-5">
  <div class="row">
    <h2>新增餐廳</h2>
  </div>
</div>
<div class="container mt-5">
  <div class="row">
    <form action="/restaurants/new"
          method="POST">
      <div class="form-group mb-3">
        <label for="name">餐廳中文名</label>
        <input type="text"
               class="form-control"
               name="name"
               required>
      </div>
      <div class="form-group mb-3">
        <label for="name_en">餐廳英文名</label>
        <input type="text"
               class="form-control"
               name="name_en"
               required>
      </div>
      <div class="form-group mb-3">
        <label for="category">分類</label>
        <input type="text"
               class="form-control"
               name="category"
               required>
      </div>
      <div class="form-group mb-3">
        <label for="image">照片網址</label>
        <input type="url"
               class="form-control"
               name="image"
               required>
      </div>
      <div class="form-group mb-3">
        <label for="location">地址</label>
        <input type="text"
               class="form-control"
               name="location"
               required>
      </div>
      <div class="form-group mb-3">
        <label for="phone">電話</label>
        <input type="tel"
               class="form-control"
               name="phone">
      </div>
      <div class="form-group mb-3">
        <label for="google_map">Google 地圖</label>
        <input type="url"
               class="form-control"
               name="google_map"
               required>
      </div>
      <div class="form-group mb-3">
        <label for="rating">評分</label>
        <input type="number"
               min="1"
               max="5"
               step="0.1"
               class="form-control"
               name="rating"
               required>
      </div>
      <div class="form-group mb-3">
        <label for="description">描述</label>
        <input type="text"
               class="form-control"
               name="description"
               required>
      </div>
      <button type="submit"
              class="btn btn-info">新增</button>
    </form>
  </div>
</div>